<div class="recipe_add_return">
  <p class="add_recipe"><%= link_to "Add recipe", add_recipe_path(@recipe["id"]), :method => "post" %></p>
  <p>
    <a class="return_recipe" href="javascript:history.back()">Return to Recipes</a>
  </p>
</div>


<h2 class="instructions_show">Instructions</h2>
<ul class="cook_times">
  <li>
    Preperation Time:
    <%= @recipe["preparationMinutes"] %>
    minutes

  </li>
  <li>
    Cooking Time:
    <%= @recipe["cookingMinutes"] %>
    minutes

  </li>
</ul>

<h2 class="ingredients">
  Ingredients
</h2>
<div class="ingredients_list">
  <ul>
    <% @ingredients["ingredients"].each do |ingredient_info|%>
      <li><%= ingredient_info["amount"]["metric"]["value"].to_f.ceil %>
        <%= ingredient_info["amount"]["metric"]["unit"] %>:
        <%= ingredient_info["name"]%>
      </li>
    <% end %>
  </ul>

</div>

<h2 class="method_show">
  Method
</h2>
<p class="cook_instructions"><%= @recipe["instructions"] %></p>
